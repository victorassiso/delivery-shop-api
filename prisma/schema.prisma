generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String
  role          Role?

  workspace    Workspace? @relation(fields: [workspace_id], references: [id])
  workspace_id String?

  created_at DateTime @default(now())

  @@map("users")
}

model Workspace {
  id   String @id @default(uuid())
  name String
  code String @unique

  User    User[]
  Product Product[]

  created_at DateTime @default(now())

  @@map("workspaces")
}

model Product {
  id           String @id @default(uuid())
  name         String
  category     String
  cost_price   Float
  retail_price Float

  workspace    Workspace @relation(fields: [workspace_id], references: [id])
  workspace_id String

  created_at DateTime @default(now())

  @@map("products")
}
