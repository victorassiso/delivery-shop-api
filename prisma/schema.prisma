generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  role          Role?
  business      Business? @relation(fields: [business_id], references: [id])
  business_id   String?

  created_at DateTime @default(now())

  @@map("users")
}

model Business {
  id   String @id @default(uuid())
  name String
  code String @unique
  User User[]

  @@map("businesses")
}

enum Role {
  user
  admin
}
